def main():
    path = "books/frankenstein.txt"
    text = get_book_text(book_path)
    word_count = split_text(text)
    print(f"{word_count} words in book")

def get_book_text(path):
    with open(path) as f:
        return f.read()

def split_text(text):
    words = text.split()
    return len(words)


main()
